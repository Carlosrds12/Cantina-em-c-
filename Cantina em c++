#include <iostream>
using namespace std;
int main()
{
int codigo,qtde, nome;
float valor=0;
char *item, *string;


cout<<"********PASTELARIA DO ZÉ*********\n";
printf("Digite seu nome: ");
scanf("%s", string);
cout<<"Informe o seu pedido\n";
cout<<"1 - Pastel de frango - R$5,50 \n";
cout<<"2 - Pastel de queijo - R$4,50\n";
cout<<"3 - Pastel de carne - R$5,00 \n";
cout<<"4 - Pastel de pizza - R$6,50\n";
cout<<"5 - Refrigerante - R$5,00\n";
cout<<"Informe o código do seu pedido:\n";
cin>>codigo;
cout<<"Informe a quantidade desejada:\n\n";
cin>>qtde;
switch (codigo)
{
 case 1: item="Pastel de frango";valor=qtde*5.50; break;
 case 2: item="Pastel de queijo";valor=qtde*4.50; break;
 case 3: item="Pastel de carne"; valor=qtde*5.00; break;
 case 4: item="Pastel de pizza";valor=qtde*6,50.00; break;
 case 5: item="Refrigerante";valor=qtde*5,0; break;
 default: cout<<"Pedido inválido!";
}
cout<<qtde<<"x"<<item<<"="<<valor;

